@page "/adminpanel"
@attribute [Authorize(Roles = "Admin, SuperUser")]
@inject IAdminPanelViewModel _adminPanelViewModel

<h1>Panel zarządzania</h1>
<p>Z tego miejsca odbywać się będzie zarządzanie użytkownikami w obrębie firmy jeśli masz role administratora</p>

<h2>Użytkownicy:</h2>
@if (_adminPanelViewModel.AddUserViewModel == null)
{
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button type="button" class="btn btn-secondary btn-sm" @onclick="_adminPanelViewModel.InitializeAddUser">Dodaj</button>
    </div>
}
@if (_adminPanelViewModel.AddUserViewModel != null)
{
    <div class="alert alert-secondary mt-4" role="alert">
        <h4>Dodaj nowego użytkownika</h4>
        <EditForm Model="@_adminPanelViewModel.AddUserViewModel" OnValidSubmit="@_adminPanelViewModel.AddNewUser">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-floating">
                <InputText type="email" class="form-control" placeholder="hack" @bind-Value="_adminPanelViewModel.AddUserViewModel.Email" />
                <label>Email(login)</label>
            </div>

            <div class="form-floating">
                <InputText type="password" class="form-control" placeholder="hack" @bind-Value="_adminPanelViewModel.AddUserViewModel.Password" />
                <label>Hasło</label>
            </div>

            <button type="submit" class="btn btn-secondary btn-sm">Dodaj</button>
            <button class="btn btn-secondary btn-sm" @onclick="_adminPanelViewModel.CancelAddUser">Anuluj</button>
        </EditForm>
    </div>
}
@if (_adminPanelViewModel.UsersViewModels != null)
{
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th scope="col">user ID</th>
                <th scope="col">email</th>
                <th scope="col">roles IDs</th>
                <th scope="col">farma</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userViewModel in _adminPanelViewModel.UsersViewModels)
            {
                <tr class="bg-hover-white-smoke w-100 pointer">
                    <th scope="row"> @userViewModel.UserID </th>
                    <td> @userViewModel.Email </td>
                    <td> @userViewModel.Roles </td>
                    <td> todo </td>
                </tr>
            }
        </tbody>
    </table>
}

<h2>Farmy:</h2>
@if (_adminPanelViewModel.FarmsViewModels != null)
{
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th scope="col">nazwa</th>
                <th scope="col">numer identyfikacyjny</th>
                <th scope="col">utworzono</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var farmViewModel in _adminPanelViewModel.FarmsViewModels)
            {
                <tr class="bg-hover-white-smoke w-100 pointer">
                    <th scope="row"> @farmViewModel.Name </th>
                    <td> @farmViewModel.ID </td>
                    <td> @farmViewModel.DateAdded </td>
                </tr>
            }
        </tbody>
    </table>
}


<h2>Grupy krów:</h2>
@if (_adminPanelViewModel.CowGroupsViewModels != null)
{
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th scope="col">nazwa</th>
                <th scope="col">numer identyfikacyjny</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cowGroupViewModel in _adminPanelViewModel.CowGroupsViewModels)
            {
                <tr class="bg-hover-white-smoke w-100 pointer">
                    <th scope="row"> @cowGroupViewModel.Name </th>
                    <td> @cowGroupViewModel.ID </td>
                </tr>
            }
        </tbody>
    </table>
}

